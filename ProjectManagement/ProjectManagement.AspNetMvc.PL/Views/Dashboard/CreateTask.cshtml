@using ProjectManagement.AspNetMvc.PL.Models.DashboardViewModels
@model NewTaskViewModel
@{
    ViewBag.Title = "CreateTask";
}
@section LeftColumnDashboard {
    @Html.Action("LeftColumnDashboardPartial")
}
@section ButtonDashboard {
    @Html.Action("ButtonDashboardPartial")
}
<div class="right_col" role="main" style="min-height: 1010px;">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>New Task</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br>
                        <section id="newTaskForm">
                            @using (Html.BeginForm("CreateTask", "Dashboard", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4>Create a new account.</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(m => m.EmployeeEmail, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10" style="width: 50%;">
                                        @Html.TextBoxFor(m => m.EmployeeEmail, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.EmployeeEmail, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10" style="width: 50%;">
                                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10" style="width: 50%;">
                                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.StartTime, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10" style="width: 50%;">
                                        @Html.TextBoxFor(x => x.StartTime, "{0:yyyy-MM-dd}", new { @class = "dateInput", @placeholder = "plz input date" })
                                        @Html.ValidationMessageFor(m => m.StartTime, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.DeadLine, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10" style="width: 50%;">
                                        @Html.TextBoxFor(x => x.DeadLine, "{0:yyyy-MM-dd}", new { @class = "dateInput", @placeholder = "plz input date" })
                                        @Html.ValidationMessageFor(m => m.DeadLine, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" class="btn btn-default" value="Submit" />
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

