@using ProjectManagement.AspNetMvc.PL.Models.DashboardViewModels
@model IEnumerable<GivenTaskEmployeeViewModel>
@{
    ViewBag.Title = "GivenTasks";
    int counter = 1;
}
<div role="main" style="min-height: 1010px;">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Employees</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- task list -->
                        <table class="table table-striped projects">
                            <thead>
                            <tr>
                                <th style="width: 1%">#</th>
                                <th style="width: 20%">Profile</th>
                                <th>Tasks</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>
                                        <img src="#" alt="avatar"/>
                                        @Html.ActionLink($"{employee.Name} {employee.Surname} ", "Info", "Profile", new {id = employee.Id}, null)
                                        <br/>
                                        <small>@employee.Email</small>
                                    </td>
                                    <td>
                                        <ol>
                                            @foreach (var task in employee.Tasks)
                                            {
                                                <li>
                                                    @Html.ActionLink($"{task.Title}", "AboutTask", new {id = task.Id})
                                                </li>
                                            }
                                        </ol>
                                    </td>
                                </tr>
                                counter++;
                            }
                            </tbody>
                        </table>
                        <!-- end project list -->
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-12">
                <button class="btn btn-success btn-lg">
                    @Html.ActionLink("Create new task", "CreateTask", "Dashboard")
                </button>
            </div>
        </div>
    </div>
</div>