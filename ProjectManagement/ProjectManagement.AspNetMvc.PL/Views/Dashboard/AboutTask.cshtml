@using ProjectManagement.AspNetMvc.PL.Models.DashboardViewModels
@model AboutTaskViewModel
@{
    ViewBag.Title = "AboutTask";
}
<div role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Task # @Model.Id</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="" role="tabpanel" data-example-id="togglable-tabs">
                            <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                                <li role="presentation" class="active">
                                    <a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Task</a>
                                </li>
                                <li role="presentation" class="">
                                    <a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Manager</a>
                                </li>
                                <li role="presentation" class="">
                                    <a href="#tab_content3" role="tab" id="profile-tab2" data-toggle="tab" aria-expanded="false">Employee</a>
                                </li>
                            </ul>
                            <div id="myTabContent" class="tab-content">
                                <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
                                    <h2>Title: @Model.Title</h2>
                                    <p>Description: @Model.Description</p>
                                    <p>Started at @Model.StartTime</p>
                                    <p>Deadline at @Model.DeadLine</p>
                                    <p>Current state is '@Model.State'</p>
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">
                                    <h2>@Html.ActionLink($"Manager id: {Model.ManagerId}", "Info", "Profile", new {id = Model.ManagerId}, null)</h2>
                                    <p>Name: @Model.ManagerName</p>
                                    <p>Surname: @Model.ManagerSurname</p>
                                    <p>Email: @Model.ManagerEmail</p>
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="tab_content3" aria-labelledby="profile-tab">
                                    <h2>@Html.ActionLink($"Employee id: {Model.EmployeeId}", "Info", "Profile", new {id = Model.EmployeeId}, null)</h2>
                                    <p>Name: @Model.EmployeeName</p>
                                    <p>Surname: @Model.EmployeeSurname</p>
                                    <p>Email: @Model.EmployeeEmail</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/Gentelella")
}